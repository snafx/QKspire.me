<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1" id="data-fabric-web-tool">

<display-name>QKspire.me</display-name>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>recipes.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>recipes.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addNewRecipeServlet</servlet-name>
        <servlet-class>recipes.servlets.AddNewRecipeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addNewRecipeServlet</servlet-name>
        <url-pattern>/add-new-recipe</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signUpUserServlet</servlet-name>
        <servlet-class>recipes.servlets.SignUpUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signUpUserServlet</servlet-name>
        <url-pattern>/reg-new-user</url-pattern>
    </servlet-mapping>



</web-app>